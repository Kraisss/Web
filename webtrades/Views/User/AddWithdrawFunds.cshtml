@model webtrades.Models.AddWithdrawModel
@{
    ViewData["Title"] = "AddFunds";
    Layout = "_UserLayout";
}

<h1>Пополнить/вывести средства</h1>
<h3>Баланс: @ViewBag.personalaccount</h3>
<form asp-action="AddWithdrawFunds" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label>Действие:</label><br />
            <input checked="checked" type="radio" asp-for="Action" value="Add" />
            <span>Добавить средства</span> <br />
            <input type="radio" asp-for="Action" value="Withdraw" />
            <span>Вывести средства</span> <br />
        </div>
        <div class="form-group">
            <label>Введите сумму</label><br />
            <input type="text" asp-for="Amount"
                   pattern="[0-9]+([,][0-9]+)?" step="0.01"
                   title="Введите сумму, если число неполное, разделите его запятой. ">
        </div>
        <div class="form-group">
            <input type="submit" value="Выполнить операцию" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
